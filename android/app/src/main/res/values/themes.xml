<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.Theme.HSCMConnect" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/hscm_green</item>
    <item name="colorPrimaryVariant">@color/hscm_green_dark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/hscm_gold</item>
    <item name="colorSecondaryVariant">@color/hscm_gold_dark</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.HSCMConnect" parent="Base.Theme.HSCMConnect" />

  <style name="Theme.HSCMConnect.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/hscm_green_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/Theme.HSCMConnect</item>
    </style>
</resources>
