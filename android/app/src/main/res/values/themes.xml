<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Base.Theme.HSCMConnect" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/hscm_green</item>
    <item name="colorPrimaryVariant">@color/hscm_green_dark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/hscm_gold</item>
    <item name="colorSecondaryVariant">@color/hscm_gold_dark</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>

  <style name="Theme.HSCMConnect" parent="Base.Theme.HSCMConnect" />

  <!-- A simplified splash theme that will work without extra libraries -->
  <style name="Theme.HSCMConnect.Splash" parent="Theme.HSCMConnect">
        <item name="android:windowBackground">@color/hscm_green_dark</item>
  </style>
</resources>
