rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // For this prototype, we'll define an "admin" as any authenticated user.
    // In a production app, this would check for a custom claim, e.g., request.auth.token.isAdmin == true
    function isAdmin() {
      return request.auth != null;
    }

    // --- PUBLIC-READ, ADMIN-WRITE COLLECTIONS ---
    // These collections are for content displayed on the public site.
    // Anyone can read them, but only an "admin" can create, update, or delete.
    
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /leadership/{leaderId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /sermons/{sermonId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /published_testimonials/{testimonialId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- USER-OWNED DATA ---
    // Users can create and update their own progress documents. They cannot read others'.
    match /user_course_progress/{progressId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.user_id;
    }

    // --- FORM SUBMISSIONS (AUTHENTICATED WRITE) ---
    // Users must be logged in to submit these forms. Only admins can read/manage them later.
    
    match /decisions/{decisionId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.user_id;
      allow read, update, delete: if isAdmin();
    }
    
    match /user_testimonies/{testimonyId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow read, update: if isAdmin();
      allow delete: if false; // Protect against accidental deletion
    }

    // --- LEAD GENERATION FORMS (ANONYMOUS WRITE) ---
    // Anyone can submit these forms to maximize lead capture. Only admins can read them.
    function allowAnonymousWriteAdminRead() {
      allow create: if true;
      allow read: if isAdmin();
      allow update, delete: if false;
    }
    
    match /lead_magnet_signups/{signupId} {
      rules: allowAnonymousWriteAdminRead();
    }
    match /visit_requests/{requestId} {
      rules: allowAnonymousWriteAdminRead();
    }
    match /exit_intent_offers/{offerId} {
      rules: allowAnonymousWriteAdminRead();
    }
    match /weekly_updates_signups/{signupId} {
      rules: allowAnonymousWriteAdminRead();
    }
    match /financial_partner_signups/{signupId} {
      rules: allowAnonymousWriteAdminRead();
    }
    match /prayer_partner_signups/{signupId} {
      rules: allowAnonymousWriteAdminRead();
    }
    match /volunteer_partner_signups/{signupId} {
      rules: allowAnonymousWriteAdminRead();
    }
  }
}
