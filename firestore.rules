
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- PUBLIC CONTENT: Allow anyone to read, only admins/logged-in users to write ---
    match /sermons/{sermonId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /published_testimonials/{testimonialId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /leadership/{leaderId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /blog_posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // --- USER-GENERATED CONTENT: Allow creation by logged-in users, but restrict reads/updates ---
    match /user_testimonies/{testimonyId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null; // Should be admin-only in production
    }
    match /decisions/{decisionId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null; // Should be admin-only
    }
    match /decisions/{decisionId}/contact_logs/{logId} {
      allow read, write: if request.auth != null; // Admin/Pastoral role only
    }

    // --- FORM SUBMISSIONS: Allow anyone to create, only admins to read ---
    match /lead_magnet_signups/{docId} { allow create: if true; allow read, write, delete: if request.auth != null; }
    match /visit_requests/{docId} { allow create: if true; allow read, write, delete: if request.auth != null; }
    match /exit_intent_offers/{docId} { allow create: if true; allow read, write, delete: if request.auth != null; }
    match /weekly_updates_signups/{docId} { allow create: if true; allow read, write, delete: if request.auth != null; }
    match /prayer_partner_signups/{docId} { allow create: if true; allow read, write, delete: if request.auth != null; }
    match /volunteer_partner_signups/{docId} { allow create: if true; allow read, write, delete: if request.auth != null; }
    
    // --- PAYMENTS: Allow creation, restrict modification. Webhooks need special handling. ---
    match /donations/{donationId} {
      allow create: if true;
      // Note: Updates are handled by a trusted server environment (e.g. Cloud Function/webhook)
      // which bypasses these rules. Client-side updates should be denied.
      allow read, update, delete: if request.auth != null;
    }
    
    // --- USER-SPECIFIC DATA: Only the user can read/write their own data ---
    match /user_course_progress/{progressId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.user_id;
    }

    // Fallback rule to ensure no accidental public access.
    match /{path=**} {
        allow read, write: if false;
    }
  }
}
    