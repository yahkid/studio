rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read on content collections, but only allow authenticated
    // users (i.e., staff) to create, update, or delete content.
    match /sermons/{sermonId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /courses/{courseId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /leadership/{leaderId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /blog_posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /published_testimonials/{testimonialId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow any user to submit forms (decisions, testimonies, etc.)
    // but restrict read/update access.
    match /decisions/{decisionId} {
       allow create: if request.auth != null;
       allow read, update: if request.auth != null; // Staff can read/update
    }
    match /decisions/{decisionId}/{document=**} {
       allow read, write: if request.auth != null; // Staff can manage logs
    }
     match /user_testimonies/{testimonyId} {
       allow create: if request.auth != null;
       allow read: if request.auth != null; // Staff can read submissions
    }
     match /donations/{donationId} {
        allow create: if true; // Allow creation from server-side action
        allow update: if true; // Allow webhook to update
        allow read: if request.auth != null; // Staff can read
     }

    // Allow users to read/write their own progress documents.
    match /user_course_progress/{progressId} {
       allow read, write: if request.auth != null && request.auth.uid == resource.data.user_id;
    }

    // Allow writes to signup collections from anonymous/authed users
     match /lead_magnet_signups/{docId} { allow create: if true; }
     match /visit_requests/{docId} { allow create: if true; }
     match /exit_intent_offers/{docId} { allow create: if true; }
     match /weekly_updates_signups/{docId} { allow create: if true; }
     match /prayer_partner_signups/{docId} { allow create: if true; }
     match /volunteer_partner_signups/{docId} { allow create: if true; }
     match /community_needs/{docId} { allow read, write: if request.auth != null; }
  }
}
